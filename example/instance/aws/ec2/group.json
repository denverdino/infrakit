{
    "ID": "aws_ec2_demo",
    "Properties": {
        "Instance" : {
            "Plugin": "aws-ec2",
            "Properties": {
                "DiscoverDefaults" : true,
                "Tags" : {
                    "env" : "dev",
                    "instance-plugin" : "aws-ec2"
                },
                "RunInstancesInput" : {
                    "InstanceType" : "t2.nano"
                }
            }
        }
    },
    "Flavor" : {
        "Plugin": "flavor-vanilla",
        "Properties": {
            "Size" : 3,
            "UserData" : [
                "sudo apt-get update -y",
                "sudo apt-get install -y nginx",
                "sudo service nginx start"
            ]
        }
    }
}
